{
  "manifest_version": 3,
  "name": "Reviews Parser: CSV Export",
  "version": "1.2",
  "description": "Автоматический сбор отзывов с Яндекс Карт в CSV.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://yandex.ru/maps/*", "*://yandex.com/maps/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}